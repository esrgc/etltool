<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Maryland Broadband - ETL Tool</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/siteStyle", "~/Content/bootstrap/css/style")
    @Scripts.Render("~/bundles/modernizr", "~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.js")" type="text/javascript"></script>    
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">ETL Tool</a>
                <ul class="nav">
                    <li class="">
                        <a href="@Url.Action("Index", "Home")"><i class="icon-white icon-home">
                        </i> Home</a>
                    </li>
                    <li><a href="@Url.Action("Index", "Help")"><i class="icon-white icon-question-sign"></i> Help</a></li>
                    <li><a href="@Url.Action("Index", "Contact")"><i class="icon-white icon-envelope"></i> Contact</a></li>
                </ul>
                @if (Request.IsAuthenticated) {
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                               @User.Identity.Name <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-user"></i> Account</a></li>
                                <li><a href="#"><i class="icon-folder-close"></i> Submission</a></li>
                                @if (Roles.IsUserInRole("admin")) { 
                                <li class="divider"></li>
                                <li>
                                    <a href="#"><i class="icon-list-alt"></i> Manager</a>    
                                </li>
                                }
                            </ul>
                        </li>
                        <li class="divider-vertical"></li>
                        <li>
                            <a href="@Url.Action("LogOut", "Account")" class="">
                                <i class="icon-white icon-off"></i> Log out
                            </a>
                        </li>
                        
                    </ul>
                }
            </div>
        </div>
    </div>
    <div id="body" class="container-fluid">
        <header class="page-header">
            @RenderSection("header", required: false)
        </header>
        <section>
            @if (TempData["message"] != null) {
                <div class="row-fluid">
                    <div class="span6 offset3">
                        <div class="alert message-box">@TempData["message"]</div>
                    </div>
                </div>
            }
            @RenderBody()
        </section>
        
        @if (ViewBag.Title != "Home") {
            <hr />
            <footer>                
                <div class="row-fluid">
                    <ul class="thumbnails">
                        <li class="span1 offset3">
                            <a target="_blank" href="http://www.recovery.gov/Pages/default.aspx">
                                <img src="@Url.Content("~/Content/images/recoveryGov.jpg")" />
                            </a>
                        </li>
                        <li class="span1">
                            <a target="_blank" href="http://www.mdbc.us/">
                                <img src="@Url.Content("~/Content/images/MDBC.jpg")" />
                            </a>
                        </li>
                        <li class="span1">
                            <a target="_blank" href="http://www.ntia.doc.gov/">
                                <img src="@Url.Content("~/Content/images/ntia_logo.png")" />
                            </a>
                        </li>
                        <li class="span1">
                            <a target="_blank" href="http://www.gov.state.md.us/">
                                <img src="@Url.Content("~/Content/images/MDlogo.gif")" />
                            </a>
                        </li>
                        <li class="span1">
                            <a target="_blank" href="http://www.esrgc.org/">
                                <img src="@Url.Content("~/Content/images/SuLogo.jpg")" />
                            </a>
                        </li>
                        <li class="span1">
                            <a target="_blank" href="http://www.towson.edu/innovation/cgis/">
                                <img src="@Url.Content("~/Content/images/towson.gif")" />
                            </a>
                        </li>
                    </ul>
                </div>
            </footer>
        }
    </div>
    @RenderSection("scripts", required: false)
    <!--Script to detects active navbar link-->
    
</body>
</html>
