@using ESRGC.Broadband.ETL.CensusBlock.Models
@model LoginModel
@{ var username = Model == null ? "" : Model.UserName; }
<form class="form-inline" action="@Url.Action("Login", "Account")" method="post" >
    @Html.AntiForgeryToken()
    <input type="text" class="input-medium" placeholder="Username" title="Username"
        name="Username" id="Username" value="@username">
    <input type="password" class="input-medium" placeholder="Password" title="Password"
        name="Password" id="Password">
    <button type="submit" data-loading-text="Signing in..." class="btn">
        Log in
    </button>
</form>
