@{
    ViewBag.Title = "Home";
}

@section header{
    <div class="row-fluid">
        <div class="span8">
            <div class="hero-unit">      
                <h2>Maryland Broadband</h2>
                <p>ETL Data Upload Tool</p>
                <small>An easy way to upload broadband service data for Census Block.</small>
            </div>
        </div>
        <div class="span4">
            <div class="row-fluid">
                <div class="span12"> 
                    <h5>Partners</h5>
                </div>
                <div class="span12">
                    <ul class="thumbnails">
                        <li class="span3"><img src="@Url.Content("~/Content/images/recoveryGov.jpg")" /></li>
                        <li class="span3"><img src="@Url.Content("~/Content/images/MDBC.jpg")" /></li>
                        <li class="span3"><img src="@Url.Content("~/Content/images/ntia_logo.png")" /></li>               
                    </ul>
                    <ul class="thumbnails">
                        <li class="span3"><img src="@Url.Content("~/Content/images/MDlogo.gif")" /></li>
                        <li class="span3"><img src="@Url.Content("~/Content/images/SuLogo.jpg")" /></li>
                        <li class="span3"><img src="@Url.Content("~/Content/images/towson.gif")" /></li>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
    
}
<!--Content-->
<div class="row-fluid">
    <div class="well span12">
        <h4><strong>Before uploading your data, please read the important notes below: </strong></h4>
        <ul>
            <li>
                Uploading file is in excel or csv format (.xls, .xlsx, or .csv).
            </li>
            <li>
                Data must meet NTIA data requirements. See this 
                <a target="_blank" href="http://www.broadbandmap.gov/blog/wp-content/uploads/2011/02/Transfer_Model_Tech_Spec.html#FeatureClassBB_Service_CensusBlock">
                    link.
                </a>                
            </li>
            <li>Column/field names can differ from NTIA model.</li>
            <li>Data fields are mappable after a data file is uploaded.</li>
        </ul>
        <div class="alert alert-info">
            <strong>Warning!</strong>
            The app will allow column mapping once data is uploaded. 
            It then verifies your data based on NTIA data requirements. 
            If any error occurs during data mapping process you must fix the error(s) and upload a new file.
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12 form-actions">
        <a href="@Url.Action("UploadFile", "Upload")" class="btn btn-primary">
            Start Upload <i class="icon-white icon-arrow-right"></i>
        </a>
    </div>
</div>
