@using ESRGC.Broadband.ETL.CensusBlock.Domain.Model
@using PagedList
@using PagedList.Mvc
@model PagedList<Ticket>
@{
    ViewBag.Title = "Ticket";
}
@section header{
    <h3>@ViewBag.Title <i class="icon-list-alt"></i></h3>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Action("index", "Home")">Home</a><span class="divider">/</span></li>
        <li>
            <a href="@Url.Action("index", "Admin")">Dashboard</a><span class="divider">/</span></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
}
<div class="row-fluid">
    <div class="span3">
        @Html.Partial("AdminTaskPanel")
    </div>
    <div class="span9">
        <h4>Ticket manager</h4>
        <div class="panel">
            <h3 class="panel-title">All tickets</h3>
            <div class="panel-content">
                <div>
                    @if (Model.Count() > 0) {
                        @Html.PagedListPager(
                        Model as IPagedList,
                        page => Url.Action("Ticket", new { page }),
                        PagedListRenderOptions.OnlyShowFivePagesAtATime
                    )
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Issued date</th>
                                    <th>Expiration date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model) { 
                                    <tr>
                                        <td>@ticket.TicketID</td>
                                        <td>@ticket.Name</td>
                                        <td>@ticket.Description</td>
                                        <td>@ticket.IssuedDate.ToShortDateString()</td>
                                        <td>@ticket.ExpirationDate.ToShortDateString()</td>
                                        <td>
                                            @if (ticket.Active) { 
                                                <span class="label label-success">Active</span>
                                            }
                                            else { 
                                                <span class="label">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(
                        Model as IPagedList,
                        page => Url.Action("Ticket", new { page }),
                        PagedListRenderOptions.OnlyShowFivePagesAtATime
                    )
                    }
                    else {
                        <p>There's currently no ticket available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
